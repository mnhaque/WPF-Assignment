<UserControl x:Class="Registration.Views.RegistrationForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:Registration.ViewModel"
             xmlns:customControls="clr-namespace:Registration.CustomControls"
             xmlns:local="clr-namespace:Registration.Views"
             xmlns:converter="clr-namespace:Registration.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.DataContext>
        <viewModels:RegistrationViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <converter:DateToStringConverter x:Key="DateToStringConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Name" Grid.Row="0" Grid.Column="0"/>
        <Label Content="Date of Birth" Grid.Row="2" Grid.Column="0"/>
        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1"/>
        <TextBox Text="{Binding DOB, Converter={StaticResource DateToStringConverter}}" Grid.Row="2" Grid.Column="1"/>

        <customControls:AdvancedButton Grid.Row="4" Command="{Binding Submit}" Grid.ColumnSpan="2" ToolTip="Save to DB">
            <Style TargetType="{x:Type customControls:AdvancedButton}">
                <Setter Property="Template" >
                    <Setter.Value >
                        <ControlTemplate TargetType="{x:Type customControls:AdvancedButton}" >
                            <Button >
                                <StackPanel Orientation="Horizontal" >
                                    <Image Margin="2 0" Source="submit.png" 
                                       Width="80" 
                                       Height="80"
                                       VerticalAlignment="Center"/>
                                </StackPanel >
                            </Button >
                        </ControlTemplate >
                    </Setter.Value >
                </Setter >
            </Style>
        </customControls:AdvancedButton>
    </Grid>
</UserControl>
